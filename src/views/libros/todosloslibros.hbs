<div class="row">
    <h1>TODOS MIS LIBROS</h1>
    {{#each mislibros}}
    <div class="col-md-3">
        <div class="card my-3">
            <div class="card-body">
                <h3 class="card-title d-flex justify-content-between align-items-center">{{ nombre }} 
                    <a href="/libros/editarlibro/{{ nombre }}"><i class="fas fa-edit"></i></a>
                </h3>
                <p>{{ autor }}</p>
                <p>{{ _id }}</p>
            </div>
            <br>     
            <!--prestar libro-->   
            <a  class="btn btn-success btn-block form-control my-2" href="/libros/prestarlibro/{{ nombre }}">
                Prestar Libro
            </a>
           
            <br>
            <form action="/libros/borrar/{{ nombre }}?_method=DELETE" method="POST">
                <input type="hidden" name="_method" value="DELETE">
                <button type="submit" class="btn btn-danger btn-block form-control my-2">
                    Borrar Libro
                </button>
            </form>
        </div>
    </div>
    {{/each}}
</div>