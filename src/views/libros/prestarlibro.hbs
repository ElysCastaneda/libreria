<div class="row">
    <h1>PRESTAR LIBROS | {{ mislibros.nombre }}</h1>
    <p>{{ mislibros._id }}</p>

    <div class="col-md-3">
        <div class="card my-3">
            <div class="card-body">
                <div class="form-group my-2">
                    <h1 class="card-title d-flex">{{ mislibros.nombre }}</h1>
                    <p>{{ mislibros.autor }}</p>
                </div>
                <form action="/libros/prestarlibro/{{mislibros.nombre}}?_method=PUT" method="POST">
                    <input type="hidden" name="_method" value="PUT">
                    <div class="form-group my-2">
                    <input type="text" 
                        name="nombre" 
                        class="form-control" 
                        placeholder="Nombre del Libro"
                        value="{{mislibros.nombre}}" readonly>
                    </div>
                    <div class="form-group my-2">
                        <input type="text"
                            name="autor"
                            class="form-control"
                            placeholder="Autor del Libro"
                            value="{{mislibros.autor}}" readonly>
                    </div>
                    <div class="form-group my-2">
                        <input type="text" 
                            name="lector" 
                            class="form-control" 
                            placeholder="Nombre del Lector"
                            autofocus>
                    </div>
                     <form action="/libros/prestarlibro/{{mislibros.nombre}}?_method=PUT" method="POST">
                        <input type="hidden" name="_method" value="PUT">
                        <button type="submit" class="btn btn-success btn-block form-control">
                            Prestar Libro
                        </button>
                    </form>
                </form>
               
                
            </div>
        </div>
    </div>

</div>